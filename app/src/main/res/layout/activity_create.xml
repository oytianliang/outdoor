            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="368dp"
            android:text="活动时间:"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/开始时间btn"
            android:layout_width="79dp"
            android:layout_height="35dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="405dp"
            android:text="start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/结束时间btn"
            android:layout_width="82dp"
            android:layout_height="35dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="448dp"
            android:text="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/活动结束时间"
            android:layout_width="193dp"
            android:layout_height="26dp"
            android:layout_alignBottom="@+id/活动开始时间"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="457dp"
            android:layout_marginEnd="63dp"
            android:layout_marginBottom="-38dp"
            android:text="选择活动结束时间"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/结束时间btn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/活动开始时间"
            android:layout_width="195dp"
            android:layout_height="26dp"
            android:layout_alignBottom="@+id/活动封面"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="414dp"
            android:layout_marginEnd="62dp"
            android:layout_marginBottom="-118dp"
            android:text="选择活动开始时间"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/开始时间btn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/活动封面"
            android:layout_marginStart="20dp"
            android:layout_marginTop="332dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="-35dp"
